{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "sourceMap": false,
    "inlineSourceMap": false,
    "strict": false,
    "outDir": "dist",
    "target": "ES2015",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "@types"]
  },
  "exclude": ["./node_modules"]
}
